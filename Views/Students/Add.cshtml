@model student_manager.Web.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">

    <div class="mt-3">
        <lable class="form-lable">Name</lable>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <lable class="form-lable">Age</lable>
        <input type="int" class="form-control" asp-for="Age" />
    </div>

    <div class="mt-3">
        <lable class="form-lable">Email</lable>
        <input type="text" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <lable class="form-lable">Course</lable>
        <input type="text" class="form-control" asp-for="Course" />
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Save</button>
    </div>
</form>
