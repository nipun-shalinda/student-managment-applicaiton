@model student_manager.Web.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No student found</p>
}
else
{

    <form method="post">

        <div class="mt-3">
            <lable class="form-lable">Name</lable>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Age</lable>
            <input type="int" class="form-control" asp-for="Age" />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Email</lable>
            <input type="text" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Course</lable>
            <input type="text" class="form-control" asp-for="Course" />
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Save</button>

            @* <button class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students">Delete</button> *@

        </div>
    </form>
}
